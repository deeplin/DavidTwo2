<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/f16" />
            <stroke android:width="@dimen/f4" android:color="@color/button_stroke_pressed" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="@dimen/f16" />
            <stroke android:width="@dimen/f4" android:color="@color/button_stroke_selected" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_background_disable" />
            <corners android:radius="@dimen/f16" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/f16" />
            <stroke android:width="@dimen/f4" android:color="@color/button_stroke_standard" />
        </shape>
    </item>
</selector>